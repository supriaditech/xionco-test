<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Stok Produk</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
      }
    </style>
  </head>
  <body class="bg-gray-50 text-gray-800 pb-24 md:pb-0">
    <%- include('layouts/navbar') %>

    <div class="max-w-6xl mx-auto p-4 md:p-6 space-y-6 pt-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-xl md:text-2xl font-bold text-gray-900">
            üì¶ Stok Produk
          </h1>
          <p class="text-sm md:text-base text-gray-500">
            Update jumlah stok produk secara manual.
          </p>
        </div>
      </div>

      <div
        class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden"
      >
        <div
          class="bg-gray-50 px-4 py-3 border-b border-gray-100 flex justify-between items-center"
        >
          <h2 class="font-semibold text-gray-700 text-sm md:text-base">
            Daftar Stok
          </h2>
          <span
            class="text-[10px] md:text-xs bg-gray-200 text-gray-700 px-2 py-1 rounded-full"
          >
            <%= totalItems %> Item
          </span>
        </div>

        <div>
          <table class="w-full text-left table-fixed">
            <thead
              class="bg-gray-50 text-[10px] md:text-xs text-gray-500 uppercase font-semibold"
            >
              <tr>
                <th class="w-[45%] px-2 py-3 md:px-6">Produk</th>
                <th class="w-[25%] px-1 py-3 md:px-6 text-center">Stok</th>
                <th class="w-[30%] px-2 py-3 md:px-6 text-right">Aksi</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% if(products.length === 0) { %>
              <tr>
                <td
                  colspan="3"
                  class="p-6 text-center text-gray-400 text-sm italic"
                >
                  Data masih kosong.
                </td>
              </tr>
              <% } %> <% products.forEach(p => { %>
              <tr class="hover:bg-gray-50">
                <td class="px-2 py-3 md:px-6 md:py-4 align-middle">
                  <div
                    class="text-xs md:text-sm font-medium text-gray-900 break-words leading-tight"
                  >
                    <%= p.name %>
                  </div>
                </td>

                <td class="px-1 py-3 md:px-6 md:py-4 text-center align-middle">
                  <span
                    class="inline-block px-2 py-1 text-xs md:text-sm font-bold rounded-lg <%= (p.Stock && p.Stock.quantity < 10) ? 'bg-red-100 text-red-700' : 'bg-green-100 text-green-700' %>"
                  >
                    <%= p.Stock ? p.Stock.quantity : 0 %>
                  </span>
                </td>

                <td class="px-2 py-3 md:px-6 md:py-4 text-right align-middle">
                  <button
                    onclick="openModal('<%= p.id %>', '<%= p.name %>', '<%= p.Stock ? p.Stock.quantity : 0 %>')"
                    class="bg-indigo-100 text-indigo-700 p-2 md:px-3 md:py-2 rounded-lg hover:bg-indigo-200 transition flex items-center justify-center ml-auto"
                  >
                    <span class="text-xs">‚úèÔ∏è</span>
                    <span class="hidden md:inline ml-1 text-xs font-bold"
                      >Update</span
                    >
                  </button>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <div
        class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-2"
      >
        <span class="text-xs md:text-sm text-gray-500">
          Hal <span class="font-bold text-gray-800"><%= currentPage %></span> /
          <%= totalPages %>
        </span>

        <div class="inline-flex rounded-md shadow-sm">
          <% if (currentPage > 1) { %>
          <a
            href="/stock?page=<%= currentPage - 1 %>"
            class="px-3 py-1.5 text-xs md:text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-50 transition"
          >
            Prev
          </a>
          <% } else { %>
          <span
            class="px-3 py-1.5 text-xs md:text-sm font-medium text-gray-300 bg-gray-50 border border-gray-300 rounded-l-lg cursor-not-allowed"
          >
            Prev
          </span>
          <% } %> <% if (currentPage < totalPages) { %>
          <a
            href="/stock?page=<%= currentPage + 1 %>"
            class="px-3 py-1.5 text-xs md:text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-50 transition"
          >
            Next
          </a>
          <% } else { %>
          <span
            class="px-3 py-1.5 text-xs md:text-sm font-medium text-gray-300 bg-gray-50 border border-gray-300 rounded-r-lg cursor-not-allowed"
          >
            Next
          </span>
          <% } %>
        </div>
      </div>
    </div>

    <div
      id="stockModal"
      class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 z-[60] flex items-center justify-center p-4 backdrop-blur-sm"
    >
      <div
        class="bg-white rounded-xl shadow-2xl w-full max-w-sm p-6 transform transition-all"
      >
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-bold text-gray-900">Update Stok</h3>
          <button
            onclick="closeModal()"
            class="text-gray-400 hover:text-gray-600"
          >
            ‚úï
          </button>
        </div>

        <form action="/stock/update" method="POST">
          <input type="hidden" name="productId" id="modalProductId" />

          <div class="space-y-4">
            <div>
              <label
                class="block text-xs font-bold text-gray-500 uppercase mb-1"
                >Nama Produk</label
              >
              <input
                type="text"
                id="modalProductName"
                disabled
                class="w-full bg-gray-100 border border-gray-200 rounded-lg px-4 py-2 text-sm text-gray-600 font-medium"
              />
            </div>
            <div>
              <label
                class="block text-xs font-bold text-gray-500 uppercase mb-1"
                >Stok Terbaru</label
              >
              <input
                type="number"
                name="quantity"
                id="modalQuantity"
                required
                min="0"
                class="w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none"
                placeholder="0"
              />
              <p class="text-[10px] text-gray-400 mt-2 italic">
                *Masukkan jumlah total stok fisik yang tersedia.
              </p>
            </div>
          </div>

          <div class="mt-6 flex justify-end gap-3">
            <button
              type="button"
              onclick="closeModal()"
              class="px-4 py-2 text-gray-500 hover:bg-gray-100 rounded-lg text-xs font-semibold transition"
            >
              Batal
            </button>
            <button
              type="submit"
              class="px-5 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg text-xs font-bold shadow-md transition"
            >
              Simpan
            </button>
          </div>
        </form>
      </div>
    </div>

    <script>
      const modal = document.getElementById("stockModal");
      const modalProductId = document.getElementById("modalProductId");
      const modalProductName = document.getElementById("modalProductName");
      const modalQuantity = document.getElementById("modalQuantity");

      function openModal(id, name, currentStock) {
        modalProductId.value = id;
        modalProductName.value = name;
        modalQuantity.value = currentStock;
        modal.classList.remove("hidden");
        setTimeout(() => modalQuantity.focus(), 100);
      }

      function closeModal() {
        modal.classList.add("hidden");
      }

      window.onclick = function (e) {
        if (e.target === modal) closeModal();
      };
    </script>
  </body>
</html>
